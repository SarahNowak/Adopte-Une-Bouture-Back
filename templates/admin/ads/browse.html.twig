{% extends 'base.html.twig' %}

{% block body %}

<h1>Liste des annonces</h1>

<div class="container">
    <a href="{{ path('admin_ads_add' )}}"><button type="button" class="btn btn-outline-secondary mt-4 mb-3">Ajouter une nouvelle annonce</button></a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">TITRE</th>
                <th scope="col">UTILISATEUR</th>
                <th scope="col">VILLE</th>
                <th scope="col">CATEGORIE</th>               
                <th scope="col">STATUS</th>
                <th scope="col"></th>
            </tr>
        </thead>
            {% for ad in ads %}
        <tbody>
            {% if ((ad.id)%2) ==  1 %}
            <tr class="table-vert-clair">       
            {% else %}
            <tr class="table-vert-foncÃ©">    
            {% endif %}
            <th>{{ad.id}}</th>
            <td>{{ad.plantAds}}</td>
            <td>{{ad.users}}</td>
            <td>{{ad.city}}</td>
            <td>{{ad.category}}</td>
            <td>
            {% if ad.status == 1 %}
            Actif
            {% else %}
            Inactif
            {% endif %}
            </td>
            <td><a href="{{ path('admin_ads_read', {id:ad.id} )}}" class="btn btn-info">Voir</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

