{% extends 'base.html.twig' %}

{% block body %}

<a href="{{path('admin_ads_browse')}}"><button class="btn btn-info mt-2 ms-2"> Retour à la liste </button></a>
<h1>Modifier une annonce</h1>
<div class="container" style="width: 30rem;">
{{ form_start(form) }}
    <div class="form-control mt-3 border border-info">
        {{ form_label(form.plant_ads, 'Titre') }}
        {{ form_widget(form.plant_ads) }}
        <div class="form-error">
        {{ form_errors(form.plant_ads) }}
        </div>
    </div>
    <div class="form-control mt-2 border border-info">
        {{ form_label(form.city, 'Ville') }}
        {{ form_widget(form.city) }}
        <div class="form-error">
        {{ form_errors(form.city) }}
        </div>
    </div>
    <div class="form-control mt-2 border border-info">
        {{ form_label(form.quantity, 'Quantité') }}
        {{ form_widget(form.quantity) }}
        <div class="form-error">
        {{ form_errors(form.quantity) }}
        </div>
    </div>
    <div class="form-control mt-2 border border-info">
        {{ form_label(form.category, 'Catégorie') }}
        {{ form_widget(form.category) }}
        <div class="form-error">
        {{ form_errors(form.category) }}
        </div>
    </div>
    <div class="form-control mt-2 border border-info">
        {{ form_label(form.users, 'Utilisateur') }}
        {{ form_widget(form.users) }}
        <div class="form-error">
        {{ form_errors(form.users) }}
        </div>
    </div>
    <div class="form-control mt-2 border border-info growth">
        {{ form_label(form.growths, 'Niveau de croissance') }}
        {{ form_widget(form.growths) }}
        <div class="form-error">
        {{ form_errors(form.growths) }}
        </div>
    </div>
    <div class="form-control mt-2 border border-info">
        {{ form_label(form.status, 'Status') }}
        {{ form_widget(form.status) }}
    </div>
    <div class="form-control mt-2 border border-info">
        {{ form_widget(form.image) }}
    </div>
    <div class="form-control mt-2 border border-info">
        {{ form_label(form.description, 'Description') }}
        {{ form_widget(form.description) }}
    </div>
    <button type="submit" class="btn btn-success mt-3">Valider</button>
{{ form_end(form) }}
</div>   
{% endblock %}
