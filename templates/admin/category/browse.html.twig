{% extends 'base.html.twig' %}

{% block body %}

<h1>Liste des catégories</h1>

<div class="container">
    <a href="{{ path('admin_category_add' )}}"><button type="button" class="btn btn-outline-secondary mt-4 mb-3">Ajouter une nouvelle catégorie</button></a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">NOM</th>
                <th scope="col">STATUS</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                {% if ((category.id)%2) ==  1 %}
                <tr class="table-vert-clair">       
                {% else %}
                <tr class="table-vert-foncé">    
                {% endif %}
                    <th scope="row">{{ category.id }}</th>
                    <td>{{ category.name }}</td>
                    <td>
                    {% if category.status == 1 %}
                    Actif
                    {% else %}
                    Inactif
                    {% endif %}
                    </td>
                    <td><a href="{{ path('admin_category_read', {id:category.id} )}}" class="btn btn-info">Voir</a></td>
                </tr>     
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
